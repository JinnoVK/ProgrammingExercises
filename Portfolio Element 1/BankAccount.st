Object subclass: #Account	instanceVariableNames: 'balance interestRate'	classVariableNames: ''	poolDictionaries: ''	category: 'BankAccount'!!Account methodsFor: 'operators' predictBalanceAfterYears: years	^ balance * ((1 + interestRate) raisedTo: years).! !!Account methodsFor: 'operators' yearsUntilAmount: amount	| b i |	b := balance.	i := 0.	[b < amount] whileTrue: [		i := i + 1.		b := b * (interestRate + 1).	].	^ i! !!Account methodsFor: 'operators' credit: amount	balance := balance + amount! !!Account methodsFor: 'initialization' initialize	balance := 0.	interestRate := 0.! !!Account methodsFor: 'accessing'interestRate	^ interestRate! !!Account methodsFor: 'accessing' balance	^ balance! !Account subclass: #CurrentAccount	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'BankAccount'!!CurrentAccount methodsFor: 'initialization' initialize	super initialize.	balance := 0.	interestRate := 0.005.! !!CurrentAccount methodsFor: 'operators' debit: amount	(balance - amount >= 0) ifTrue: [		balance := balance - amount.	] ifFalse: [		Exception signal: 'Account does not have enough funds.'.	]! !Account subclass: #SavingsAccount	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'BankAccount'!!SavingsAccount methodsFor: 'initialization' initialize	super initialize.	balance := 0.	interestRate := 0.015.! !